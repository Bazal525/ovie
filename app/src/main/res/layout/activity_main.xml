<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/tlo">

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="350dp"
        android:layout_height="364dp"
        android:contentDescription="image_1"
        android:src="@drawable/image_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073"
        app:layout_editor_absoluteX="10dp"
        app:layout_editor_absoluteY="25dp" />

    <View
        android:id="@+id/kulki"
        android:layout_width="450dp"
        android:layout_height="900dp"
        android:background="@drawable/kulki"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/__p__ogl_daj_gdzie_chcesz_i_kiedy_chcesz_"
        android:layout_width="360dp"
        android:layout_height="128dp"
        android:fontFamily="@font/nokorab"
        android:text="@string/__p__ogl_daj_gdzie_chcesz_i_kiedy_chcesz__string"
        android:textColor="@color/__p__ogl_daj_gdzie_chcesz_i_kiedy_chcesz__color"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.649"
        app:layout_editor_absoluteY="450dp" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/okragle"
        android:fontFamily="@font/nokorab"
        android:text="Zaloguj siÄ™"
        app:layout_constraintBottom_toTopOf="@+id/registerbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="216dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nokorab"
        android:text="@string/rejstracja"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />


</androidx.constraintlayout.widget.ConstraintLayout>

