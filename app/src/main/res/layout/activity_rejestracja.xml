<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rejestracja"
    android:background="@color/tlo">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:contentDescription="logo"
        android:src="@drawable/image_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <View
        android:id="@+id/kulki"
        android:layout_width="450dp"
        android:layout_height="900dp"
        android:background="@drawable/kulki"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/napis_rej"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nokorab"
        android:text="Zarejestruj się już dziś i oglądaj bez przerwy."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/logintekst"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fioletowy"
        android:ems="10"
        android:hint="login"
        android:inputType="text"
        android:textColor="#ECECEC"
        android:textColorHint="#959595"
        android:textColorLink="@color/fioletowy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    <EditText
        android:id="@+id/mailtekst"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fioletowy"
        android:ems="10"
        android:hint="mail"
        android:inputType="text"
        android:textColor="#ECECEC"
        android:textColorHint="#959595"
        android:textColorLink="@color/fioletowy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451" />

    <EditText
        android:id="@+id/haslotekst"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fioletowy"
        android:ems="10"
        android:hint="hasło"
        android:inputType="text"
        android:textColor="#ECECEC"
        android:textColorHint="#959595"
        android:textColorLink="@color/fioletowy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.552" />

    <EditText
        android:id="@+id/wiek"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fioletowy"
        android:ems="10"
        android:hint="wiek"
        android:inputType="text"
        android:textColor="#ECECEC"
        android:textColorHint="#959595"
        android:textColorLink="@color/fioletowy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/okragle"
        android:fontFamily="@font/nokorab"
        android:text="ZAJERESTRUJ SIE"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.808" />

</androidx.constraintlayout.widget.ConstraintLayout>